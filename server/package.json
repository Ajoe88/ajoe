{
  "name": "ajoe-server",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:local": "npm run docker:db & nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "next build && nest build",
    "build:next": "next build",
    "build:css": "tailwindcss build -o public/tailwind.css",
    "test": "jest --config ./jest.config.js",
    "seed": "ts-node scripts/seed.ts",
    "db:migrate-save": "prisma --experimental migrate save",
    "db:migrate-up": "prisma --experimental migrate up",
    "db:clean": "ts-node scripts/clean.ts",
    "db:init": "run-s \"db:migrate-save -- --name 'initial version'\" db:migrate-up seed",
    "prisma:generate": "prisma generate",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:build": "docker build .",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --config .prettierrc {client,src,pages}/**/*.{ts,tsx} --write"
  },
  "dependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/common": "^7.3.2",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.3.2",
    "@nestjs/graphql": "^7.9.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/swagger": "^4.6.1",
    "@prisma/cli": "2.11.0",
    "@prisma/client": "2.11.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/passport": "^1.0.5",
    "@types/passport-http": "^0.3.8",
    "@types/react-dom": "^17.0.0",
    "apollo-server-express": "^2.19.0",
    "autoprefixer": "^10.2.3",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fast-glob": "^3.2.4",
    "formik": "^2.2.6",
    "graphql": "^15.4.0",
    "graphql-tools": "^4.0.8",
    "gray-matter": "4.0.2",
    "nest-access-control": "^2.0.2",
    "nest-morgan": "^1.0.1",
    "nestjs-prisma": "^0.7.0",
    "next": "^10.0.3",
    "node-sass": "^5.0.0",
    "nookies": "^2.5.2",
    "normalize-path": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "postcss": "^8.2.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "remark": "13.0.0",
    "remark-html": "13.0.1",
    "swagger-ui-express": "^4.1.4",
    "tailwindcss": "^2.0.2",
    "ts-node": "^9.0.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.3.2",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.14.22",
    "@types/normalize-path": "^3.0.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/react": "^17.0.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "jest": "^26.1.0",
    "prettier": "2.2.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-publish": "npm run build",
      "pre-commit": "npm run lint:eslint",
      "pre-push": "npm run test"
    }
  },
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8"
  }
}
