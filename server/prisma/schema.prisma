datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Article {
  Authors   String?
  content   String
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  Title     String
  updatedAt DateTime @updatedAt
}

model Tags {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  Name      String?
}